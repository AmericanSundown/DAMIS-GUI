{% block body %}
    <div class="col-lg-12">
        <form method="POST">
            <input type="hidden" name="params" id="params" value="{{ response }}" />
            <p>
                {{ 'Specify the parameters of the algorithm' | trans({}, 'ExperimentBundle') }}
            </p>
            <div class="form-group component-form-margin">
                {{ form_label(form.normMeanStd) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_widget(form.normMeanStd) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.normMeanStd) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.a) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.a) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.a) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.b) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.b) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.b) }}
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>
{% endblock %}