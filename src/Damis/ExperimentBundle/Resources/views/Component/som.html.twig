{% block body %}
    <div class="col-lg-12">
        <form method="POST">
            <input type="hidden" name="params" id="params" value="{{ response }}" />
            <p>
                {{ 'Specify the parameters of the algorithm' | trans({}, 'ExperimentBundle') }}
            </p>
            <div class="form-group component-form-margin">
                {{ form_label(form.rows) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.rows) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.rows) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.columns) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.columns) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.columns) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.eHat) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.eHat) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.eHat) }}
            </div>
            <div class="col-md-12">
                {{ "Fields marked with <span style='color:red;'>*</span> are mandatory"|trans({}, 'ExperimentBundle')|raw }}
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>
{% endblock %}