{% block body %}
    <div class="col-lg-12">
        <form method="POST">
            <input type="hidden" name="params" id="params" value="{{ response }}" />
            <p>
                {{ 'Specify the parameters of the algorithm' | trans({}, 'ExperimentBundle') }}
            </p>
            <div class="form-group component-form-margin">
                {{ form_label(form.d) }}
                <div class="col-md-3 component-form-margin">
                    {{ form_widget(form.d) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.d) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.maxIteration) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.maxIteration) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.maxIteration) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.eps) }}
                <div class="col-md-3 component-form-margin">
                {{ form_widget(form.eps) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.eps) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.zeidel) }}
            </div>
            <div class="col-md-12 component-form-margin">
                {{ form_widget(form.zeidel) }}
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.zeidel) }}
            </div>
            <div class="col-md-12">
                {{ "Fields marked with <span style='color:red;'>*</span> are mandatory"|trans({}, 'ExperimentBundle')|raw }}
            </div>
            {{ form_widget(form._token) }}
        </form>
    </div>
    <script>
        $("input[name='splitdata_type[firstSubsetPerc]']").change(function(){
            $("input[name='splitdata_type[secondSubsetPerc]']:visible").val(100 - $(this).val());
        })
    </script>
{% endblock %}