{% block body %}
    <div class="col-lg-12">
        <form method="POST">
            <input type="hidden" name="params" id="params" value="{{ response }}" />
            <p>
                {{ 'Specify the parameters of the algorithm' | trans({}, 'ExperimentBundle') }}
            </p>
            <div class="form-group component-form-margin">
                {{ form_label(form.r) }}
                <div class="col-md-3 component-form-margin">
                    {{ form_widget(form.r) }}
                </div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.r) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.dL) }}
                <div class="col-md-3 component-form-margin">
                    {{ form_widget(form.dL) }}
                </div>
                <div class="col-md-1" style="margin-left:-25px;padding-top: 6px;">%</div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.dL) }}
            </div>
            <div class="form-group component-form-margin">
                {{ form_label(form.dT) }}
                <div class="col-md-3 component-form-margin">
                    {{ form_widget(form.dT) }}
                </div>
                <div class="col-md-1" style="margin-left:-25px;padding-top: 6px;">%</div>
            </div>
            <div class="form-group col-md-12 component-form-margin">
                {{ form_errors(form.dT) }}
            </div>
            <div class="col-md-12">
                {{ "Fields marked with <span style='color:red;'>*</span> are mandatory"|trans({}, 'ExperimentBundle')|raw }}
            </div>

            {{ form_widget(form._token) }}
        </form>
        <script>
            $("input[name='rdf_type[dL]']").change(function(){
                $("input[name='rdf_type[dT]']:visible").val(100 - $(this).val());
            })
        </script>
    </div>
{% endblock %}