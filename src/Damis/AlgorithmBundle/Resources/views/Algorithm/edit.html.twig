{% extends "::base.html.twig" %}
{% block body %}
    <ul class="nav nav-tabs">
        <li><a href="{{ path('algorithm_list') }}">{{ 'Algorithms list' | trans({}, 'AlgorithmBundle') }}</a></li>
        <li class="active"><a href="{{ path('algorithm_new') }}">{{ 'Upload algorithm from computer' | trans({}, 'AlgorithmBundle') }}</a></li>
    </ul>
    <div class="row">
        <div class="col-lg-4" style="margin-top: 35px;">
            <form role="form" id="createAlgorithm" action="{{ path('algorithm_update', {'id' : id}) }}" method="post" {{ form_enctype(form) }}>
                <div class="form-group">
                    {{ form_label(form.fileTitle) }}
                    {{ form_widget(form.fileTitle) }}
                    {{ form_errors(form.fileTitle) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.fileDescription) }}
                    {{ form_widget(form.fileDescription) }}
                    {{ form_errors(form.fileDescription) }}
                </div>
                <button type="submit" class="btn btn-primary">{{ 'Save' | trans({}, 'AlgorithmBundle') }}</button>
            </form>
        </div>
    </div>
{% endblock %}